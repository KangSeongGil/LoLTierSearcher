<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
        "http://struts.apache.org/dtds/tiles-config_1_3.dtd">
<tiles-definitions>
    <definition name="default" template="/WEB-INF/velocity/layouts/layout.vm">
        <put name="header" value="/WEB-INF/velocity/fragments/_header.vm"/>
        <put name="footer" value="/WEB-INF/velocity/fragments/_footer.vm"/>
    </definition>

    <definition name="/Demo" extends="default">
        <put name="body" value="/WEB-INF/views/welcome.vm"/>
    </definition>

    <definition name="/" extends="default">
        <put name="body" value="/WEB-INF/views/welcome.vm"/>
    </definition>
</tiles-definitions>