<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://struts.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
    <definition name="main_base" template="/WEB-INF/layouts/layout.vm" templateType="velocity">
        <put-attribute name="header" value="/WEB-INF/fragments/_header.vm" type="velocity"/>
        <put-attribute name="center" value=""/>
        <put-attribute name="footer" value="/WEB-INF/fragments/_footer.vm" type="velocity"/>
    </definition>

    <definition name="index" extends="main_base" templateType="velocity">
        <put-attribute name="center" value="/WEB-INF/views/index.vm" type="velocity"/>
    </definition>
</tiles-definitions>
